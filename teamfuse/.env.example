# ========================
# Server-side Variables
# ========================

# Connection string for your MongoDB database (used by backend & Prisma)
DATABASE_URL="mongodb+srv://username:password@cluster0.mongodb.net/teamfuse"

# Secret key for signing and verifying JWT tokens (used in authentication)
JWT_SECRET="mysecretkey123"

# Redis URL for caching and session management
REDIS_URL="redis://default:password@redis-server:6379"

# Defines the environment your app is running in (development, production, etc.)
NODE_ENV="development"

# URL for handling UPI (payment) related API requests
UPI_SERVICE_URL="https://upi.teamfuse.app/api/v1"

# Used by NextAuth.js for authentication callbacks (must match your deployed URL)
NEXTAUTH_URL="http://localhost:3000"


# ===========================
# Client-side Variables
# ===========================

# Base URL for frontend API calls (used in fetch/axios requests)
NEXT_PUBLIC_API_BASE_URL="http://localhost:8080/api"

# App name shown in UI or browser title (safe to expose)
NEXT_PUBLIC_APP_NAME="TeamFuse"
