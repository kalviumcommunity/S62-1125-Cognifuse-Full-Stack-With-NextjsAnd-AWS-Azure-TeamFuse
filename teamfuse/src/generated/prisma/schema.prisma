generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  avatarUrl     String?
  oauthProvider String   @default("github")
  oauthId       String   @unique
  createdAt     DateTime @default(now())

  oauthAccounts UserOAuth[] // 1-to-many, no onDelete here

  projectsCreated Project[]       @relation("ProjectsCreated")
  googleDocsData  GoogleDocsData?

  memberships      ProjectMember[]
  messages         ChatMessage[]
  tasks            Task[]
  feedbackGiven    Feedback[]       @relation("FeedbackGiven")
  feedbackReceived Feedback[]       @relation("FeedbackReceived")
  githubActivities GitHubActivity[]
  presenceLogs     PresenceLog[]

  refreshTokens RefreshToken[]
}

model UserOAuth {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider       String
  providerUserId String
  accessTokenEnc String
  tokenExpiresAt DateTime?
  scopes         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([provider, providerUserId])
  @@index([userId])
}

model RefreshToken {
  id              String    @id @default(cuid())
  userId          String
  hashedToken     String
  expiresAt       DateTime
  revokedAt       DateTime?
  replacedByToken String?
  createdAt       DateTime  @default(now())
  lastUsedAt      DateTime  @default(now())
  userAgent       String?
  ipAddress       String?
  location        String?
  deviceName      String?
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hashedToken])
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  githubRepo  String
  createdById String
  createdAt   DateTime  @default(now())
  lastActive  DateTime?

  members      ProjectMember[]
  tasks        Task[]
  chatMessages ChatMessage[]
  feedbacks    Feedback[]
  githubData   GitHubActivity[]
  insights     Insight[]
  presenceLogs PresenceLog[]
  createdBy    User             @relation("ProjectsCreated", fields: [createdById], references: [id])

  @@index([createdById])
  @@index([createdAt])
}

model ProjectMember {
  id        String  @id @default(cuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  role     ProjectRole  @default(MEMBER) // 'leader' | 'member'
  status   MemberStatus @default(PENDING) // 'pending' | 'accepted' | 'declined'
  joinedAt DateTime?    @default(now())

  @@unique([userId, projectId]) // A user can't join the same project twice
  @@index([projectId])
  @@index([userId])
}

model Task {
  id          String       @id @default(cuid())
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  priority    TaskPriority @default(MEDIUM) // 'low' | 'medium' | 'high'
  projectId   String
  title       String
  description String?
  weight      Float        @default(1.0)
  status      TaskStatus   @default(PENDING) // 'todo' | 'in-progress' | 'done'
  assignee    User?        @relation(fields: [assigneeId], references: [id])
  assigneeId  String?
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  score       Float?
}

model ChatMessage {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  sender    User     @relation(fields: [senderId], references: [id])
  senderId  String
  message   String
  type      String   @default("text") // 'text' | 'code' | 'image'
  aiLabel   String? // 'helpful' | 'off-topic' | etc.
  createdAt DateTime @default(now())
}

model GitHubActivity {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  commitCount   Int      @default(0)
  prCount       Int      @default(0)
  linesAdded    Int      @default(0)
  linesDeleted  Int      @default(0)
  weekStart     DateTime
  commitDetails Json? // store structured AI-labeled commit summaries

  @@unique([projectId, userId, weekStart])
}

model GoogleDocsData {
  id           String    @id @default(uuid())
  userId       String    @unique
  editsCount   Int?      @default(0)
  lastActivity DateTime?
  user         User      @relation(fields: [userId], references: [id])
}

model Insight {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  generatedAt DateTime @default(now())
  type        String // 'weekly' | 'github' | 'chat' | 'tasks'
  summary     String
  metrics     Json?
}

model Feedback {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  fromUser   User   @relation("FeedbackGiven", fields: [fromUserId], references: [id])
  fromUserId String
  toUser     User   @relation("FeedbackReceived", fields: [toUserId], references: [id])
  toUserId   String

  effort        Int
  collaboration Int
  reliability   Int
  comment       String?
  aiFlag        String? // 'biased', 'neutral', etc.
  createdAt     DateTime @default(now())
}

model PresenceLog {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  status       PresenceStatus @default(OFFLINE) // 'online' | 'idle' | 'working' | 'offline'
  sessionStart DateTime
  sessionEnd   DateTime?
  duration     Int? // minutes
}

enum PresenceStatus {
  ONLINE
  IDLE
  OFFLINE
  FOCUSED
}

enum ProjectRole {
  LEADER
  MEMBER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum MemberStatus {
  PENDING
  ACCEPTED
  DECLINED
}
